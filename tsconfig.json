{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",           // ← CHANGÉ !
    "moduleResolution": "node",     // ← AJOUTÉ !
    "esModuleInterop": true,        // ← AJOUTÉ !
    "allowSyntheticDefaultImports": true,  // ← AJOUTÉ !
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true
  },
  "ts-node": {
    "esm": false                    // ← AJOUTÉ pour tsx !
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
