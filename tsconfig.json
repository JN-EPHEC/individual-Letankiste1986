{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
